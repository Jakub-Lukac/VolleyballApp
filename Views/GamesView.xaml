<UserControl x:Class="VolleyballApp.Views.GamesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VolleyballApp.Views"
             xmlns:viewmodels="clr-namespace:VolleyballApp.ViewModels" 
             xmlns:services="clr-namespace:VolleyballApp.Services"
             d:DataContext="{d:DesignInstance Type=viewmodels:GamesViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Merging the GamesViewStyles.xaml -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/GamesViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="LightBlue" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition Height=".125*"/>
            <RowDefinition Height=".675*"/>
        </Grid.RowDefinitions>

        <!-- League selection  -->
        <ItemsControl ItemsSource="{Binding Leagues}" Grid.Row="0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Margin="12"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Command="{Binding DataContext.SelectLeagueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                            CommandParameter="{Binding}"
                            Style="{StaticResource LeagueButtonStyle}">
                        <StackPanel Orientation="Vertical">
                            <Image Source="{Binding Logo}" Width="60" Height="60"/>
                            <TextBlock Text="{Binding Name}" FontSize="12" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Filters and Date Selection -->
        <Grid Grid.Row="1" Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Badges -->
                <ColumnDefinition Width="*" />
                <!-- Spacer (Push DatePicker Right) -->
                <ColumnDefinition Width="Auto"/>
                <!-- DatePicker -->
            </Grid.ColumnDefinitions>

            <!-- Filter Badges (Left-Aligned) -->
            <ItemsControl ItemsSource="{Binding Filters}" Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding}" 
                                     GroupName="Filters"
                                     Style="{StaticResource CustomRadioButtonStyle}" 
                                     IsChecked="{Binding DataContext.SelectedFilter, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                                     CommandParameter="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Date Picker (Right-Aligned) -->
            <DatePicker Grid.Column="2" SelectedDate="{Binding SelectedDate, Mode=OneWay}"/>
        </Grid>
    </Grid>
</UserControl>
