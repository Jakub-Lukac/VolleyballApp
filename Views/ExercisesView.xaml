<UserControl x:Class="VolleyballApp.Views.ExercisesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VolleyballApp.Views"
             xmlns:viewmodels="clr-namespace:VolleyballApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ExercisesViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{StaticResource PrimaryBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1.5*" />
        </Grid.ColumnDefinitions>

        <!-- Filters for Difficulty -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="cbExercises"
                      ItemsSource="{Binding DifficultyList}"
                      SelectedItem="{Binding SelectedDifficulty, Mode=TwoWay}"
                      Width="150" Margin="5"
                      Text="Select Difficulty" SelectionChanged="cbExercises_SelectionChanged" />
        </StackPanel>

        <!-- Exercise List (4x3 Grid Layout) -->
        <ListBox Grid.Row="1" Grid.Column="0" ItemsSource="{Binding FilteredExercises}"
                 SelectedItem="{Binding SelectedExercise, Mode=TwoWay}" Margin="10">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" Rows="5" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" />
                        <TextBlock Text="{Binding Difficulty}" FontSize="14" Foreground="Gray" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Exercise Details Section -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Exercise Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding SelectedExercise.Title}" FontSize="20" FontWeight="Bold" />
            <TextBlock Text="{Binding SelectedExercise.Description}" FontSize="14" Margin="0,10,0,0" Height="100" TextWrapping="Wrap"/>
            <TextBlock Text="Time to Perform:" FontSize="14" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedExercise.Time}" FontSize="14"/>
        </StackPanel>
    </Grid>
</UserControl>
